{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "watch": false,
    "outDir": "bin",
    
    // types option has been previously configured
    "types": [
      // add node as an option
      "mocha"
      ],
      // typeRoots option has been previously configured
      "typeRoots": [
      // add path to @types
      "node_modules/@types"
      ],
    "lib": [
        "es5",
        "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}