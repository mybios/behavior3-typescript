{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "watch": false,
    "outDir": "bin",
    "types": [
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}